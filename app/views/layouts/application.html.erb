<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">

    <% if active_sale? %>
      <div class="alert alert-info">
        <p>
          There is an active <strong>"<%= get_sale.name %> SALE"</strong> going on!!!
          <%#= raise get_sale.inspect %>
          <strong>Everything is <%= get_sale.percent_off %>% off! </strong> 
        </p>
        <p>Offer ends on <strong><%= get_sale.ends_on %></strong></p>
      </div>
    <% end %>

    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
